<?xml version="1.0"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<resource-bundle>
			<base-name>messages</base-name>
			<var>messages</var>
		</resource-bundle>
		
	</application>

	<converter>
	     <converter-id>converter.CpfConverter</converter-id>
	     <converter-class>br.edu.ifrs.canoas.jee.webapp.util.converter.CPFConverter</converter-class>
	</converter>

	<converter>
	     <converter-id>converter.cnpjConverter</converter-id>
	     <converter-class>br.edu.ifrs.canoas.jee.webapp.util.converter.CNPJConverter</converter-class>
	</converter>


</faces-config>
